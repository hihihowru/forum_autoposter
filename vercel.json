{
  "version": 2,
  "buildCommand": "./build-frontend.sh",
  "outputDirectory": "docker-container/finlab python/apps/dashboard-frontend/dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/proxy/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "RAILWAY_API_URL": "https://forumautoposter-production.up.railway.app"
  },
  "functions": {
    "api/proxy/[...path].js": {
      "maxDuration": 30
    }
  }
}
