{
  "version": 2,
  "buildCommand": "cd \"docker-container/finlab python/apps/dashboard-frontend\" && npm install && npm run build",
  "outputDirectory": "docker-container/finlab python/apps/dashboard-frontend/dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/proxy/:path*"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "RAILWAY_API_URL": "https://forumautoposter-production-ed0b.up.railway.app"
  },
  "functions": {
    "api/proxy/[...path].js": {
      "maxDuration": 30
    }
  }
}
